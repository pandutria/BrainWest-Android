<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:padding="2.5dp"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_text_gradient"
            android:fontFamily="@font/poppins_semibold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:text="@string/result_analytics_lung"
            android:textColor="@color/white" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_warning"
            android:paddingVertical="8dp"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_warning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/warning_important"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#D54941"
                    android:textSize="12sp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/result_from_analytics_ai"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#D54941"
                android:justificationMode="inter_word"
                android:textSize="10sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            android:background="@drawable/bg_card_acuration"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ai_accuracy_level"
                android:textColor="@color/primary"
                android:textSize="13sp"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/poppins_semibold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progressAccuration"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="15dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progressDrawable="@drawable/bg_progress"
                    android:layout_marginRight="10dp"
                    android:progress="50"/>

                <TextView
                    android:id="@+id/tvAccuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75%"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/primary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_double_card_result"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="8dp"
                    android:layout_marginEnd="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/disease_diagnosis"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="10sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tvDiagnose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glioma"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="10sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_double_card_result"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clinical_risks"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="10sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tvRisk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glioma"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="10sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disease_explanation"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/primary"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvExlpanation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Glioma adalah salah satu jenis tumor otak yang berasal dari sel glial,  yaitu sel-sel pendukung di otak dan sistem saraf pusat yang membantu  neuron berfungsi dengan baik. Glioma bisa bersifat jinak (tidak  menyebar) atau ganas (kanker), dan tingkat keparahannya tergantung jenis serta kecepatan pertumbuhannya."
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="8sp"
                    android:justificationMode="inter_word"
                    android:textColor="@color/text_primary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/possible_conditions"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/primary"
                    android:textSize="12sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_condition"
                    android:overScrollMode="never"
                    android:clipToPadding="false"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recomendation_from_us"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/primary"
                    android:textSize="12sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecomendation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_recomendation"
                    android:overScrollMode="never"
                    android:clipToPadding="false"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="12dp"
                android:elevation="3dp"
                android:background="@drawable/bg_consultation_in_result"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/need_more_explenation"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/consultation_the_result_now"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="10sp"
                        android:layout_marginTop="-1dp"
                        android:textColor="@color/text_thirdtinary"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/constultation"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="10sp"
                    android:background="@drawable/bg_btn_long_consultation_shortcut"
                    android:textColor="@color/white"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="6dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHome"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:backgroundTint="#263C82F6"
                android:text="@string/back"
                android:textColor="@color/primary"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_semibold"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/primary"
                android:text="@string/print"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>