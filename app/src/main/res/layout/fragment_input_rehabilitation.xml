<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".ui.event.EventFragment">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:paddingHorizontal="20dp"
        android:background="@color/bg"
        android:orientation="horizontal"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2.5dp"
            android:src="@drawable/arrow_left"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/rehabilitation"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/btnTicket"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2.5dp"
            android:src="@drawable/ic_favorite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_age"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:layout_marginHorizontal="20dp"
            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_pencil" />

            <View
                android:layout_width="0.7dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:background="@color/white" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/hint_age"
                android:paddingLeft="15dp"
                android:maxLines="1"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@color/white"
                android:textSize="13sp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/man"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="13sp"
                    android:paddingLeft="10dp"
                    app:buttonTint="@color/rb_color"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/woman"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="13sp"
                    android:layout_marginLeft="12dp"
                    android:paddingLeft="10dp"
                    app:buttonTint="@color/rb_color"/>


            </RadioGroup>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_status_medice"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:layout_marginHorizontal="20dp"
            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_document" />

            <View
                android:layout_width="0.7dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:background="@color/white" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinnerMedice"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:popupBackground="@color/white"
                    android:foregroundGravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:elevation="2dp"/>

                <TextView
                    android:id="@+id/spinnerHint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Pilih status..."
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="15dp"
                    android:textSize="13sp"/>

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_status_medice"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="&lt; 1 bulan"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:paddingLeft="10dp"
                app:buttonTint="@color/rb_color"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="1â€“2 bulan"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="7dp"
                app:buttonTint="@color/rb_color"/>


            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="3 bulan"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="7dp"
                app:buttonTint="@color/rb_color"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb4"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="3 bulan lebih"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:textSize="13sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="7dp"
                app:buttonTint="@color/rb_color"/>


        </RadioGroup>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/layoutBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center_vertical"
            android:text="@string/start_rehabilitation"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="8dp"
            android:layout_marginHorizontal="20dp"/>

        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary"
            android:visibility="gone" />

    </FrameLayout>


</RelativeLayout>