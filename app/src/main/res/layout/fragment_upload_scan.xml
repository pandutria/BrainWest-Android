<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg">

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:padding="2.5dp"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_text_gradient"
            android:fontFamily="@font/poppins_semibold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:text="@string/upload_x_ray"
            android:textColor="@color/white" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"
            android:text="@string/upload_text"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="150dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_media"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:id="@+id/imgImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/example_videos"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/layoutUpload"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_upload_dash"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_upload"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/upload_file"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="16sp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/browse"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="16sp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/secondary"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/file_size"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/textSecondary"/>


                </LinearLayout>



            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_media"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="14sp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingRight="12dp"
                android:background="@drawable/bg_address_media"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etPath"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:background="@android:color/transparent"
                    android:hint="Belum ada media yang di unggah"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:paddingHorizontal="12dp"
                    android:inputType="text"
                    android:textSize="13sp"
                    android:textColorHint="@color/textSecondary"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_delete"
                    android:scaleType="centerCrop"
                    android:background="@null"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDetection"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/detection_now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:textSize="15sp"
            app:cornerRadius="8dp" />

        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:indeterminateTint="@color/primary"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>