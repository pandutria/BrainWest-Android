<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="8dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="12dp"
        android:orientation="horizontal">
        
        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/gradient_stroke"
            android:layout_gravity="center_vertical"
            android:padding="0.7dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/example_videos"
                android:scaleType="centerCrop"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kidness_donation"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="13sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donasi untuk “Penyakit Tumor Otak Shifa.”"
                android:fontFamily="@font/poppins_regular"
                android:textSize="9sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textSecondary"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="Rp. 400.000,00"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_semibold"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>