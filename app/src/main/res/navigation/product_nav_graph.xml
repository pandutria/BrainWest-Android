<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        tools:layout="@layout/fragment_list_product"
        android:name="com.example.brainwest_android.ui.product.list.ListProductFragment">
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/zoom_fade_in"
            app:exitAnim="@anim/zoom_fade_out"
            app:popEnterAnim="@anim/zoom_fade_in"
            app:popExitAnim="@anim/zoom_fade_out"/>
        <action
            android:id="@+id/action_listFragment_to_cartFragment"
            app:destination="@id/cartFragment"
            app:enterAnim="@anim/zoom_fade_in"
            app:exitAnim="@anim/zoom_fade_out"
            app:popEnterAnim="@anim/zoom_fade_in"
            app:popExitAnim="@anim/zoom_fade_out"/>
        <action
            android:id="@+id/action_listFragment_to_historyFragment"
            app:destination="@id/historyFragment"
            app:enterAnim="@anim/zoom_fade_in"
            app:exitAnim="@anim/zoom_fade_out"
            app:popEnterAnim="@anim/zoom_fade_in"
            app:popExitAnim="@anim/zoom_fade_out"/>
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        tools:layout="@layout/fragment_detail_product"
        android:name="com.example.brainwest_android.ui.product.detail.DetailProductFragment"/>

    <fragment
        android:id="@+id/cartFragment"
        tools:layout="@layout/fragment_cart_product"
        android:name="com.example.brainwest_android.ui.product.cart.CartProductFragment">
        <action
            android:id="@+id/action_cartFragment_to_paymentFragment"
            app:destination="@id/paymentFragment"
            app:enterAnim="@anim/zoom_fade_in"
            app:exitAnim="@anim/zoom_fade_out"
            app:popEnterAnim="@anim/zoom_fade_in"
            app:popExitAnim="@anim/zoom_fade_out"/>
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        tools:layout="@layout/fragment_history_product"
        android:name="com.example.brainwest_android.ui.product.history.HistoryProductFragment"/>

    <fragment
        android:id="@+id/paymentFragment"
        tools:layout="@layout/fragment_payment_product"
        android:name="com.example.brainwest_android.ui.product.payment.PaymentProductFragment"/>

</navigation>