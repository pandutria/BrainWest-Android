<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".di.MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrainWestAndroid"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.parent.ProductActivity"
            android:exported="false" />
        <activity
            android:name=".ui.parent.CommunityActivity"
            android:exported="false" />
        <activity
            android:name=".ui.parent.RehabilitationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.parent.ScanActivity"
            android:exported="false" />
        <activity
            android:name=".ui.parent.ConsultationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.parent.DonationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.parent.EventActivity"
            android:exported="false" />
        <activity
            android:name=".ui.parent.AuthActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.parent.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.parent.ChatBotActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>